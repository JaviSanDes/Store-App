{
    "name": "Ecommerce-MERN",
    "version": "1.0.0",
    "description": "Ecommerce store made with ReactJS, Redux, NodeJS, ExpressJS and MongoDB",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "cd client && npm run build",
        "install-client": "cd client && npm install",
        "heroku-postbuild": "npm run install-client && npm run build",
        "start": "node index.js",
        "client": "cd client && npm start",
        "dev": "concurrently -n 'server,client' -c 'red,green'  \"nodemon index.js\" \"npm run client\""
    },
    "engines": {
        "node": "10.16.0",
        "npm": "6.9.0"
    },
    "keywords": [],
    "author": "JavSan",
    "license": "ISC",
    "dependencies": {
        "compression": "^1.7.4",
        "concurrently": "^5.2.0",
        "config": "^3.3.1",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "helmet": "^3.23.3",
        "mongo": "^0.1.0",
        "mongoose": "^5.9.20"
    }
}
